{
    "name": "wave",
    "description": "A Ghost theme",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "docs": "https://wave.ghost.io/about/",
    "config": {
        "posts_per_page": 5,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Logo on the left",
                    "Logo in the middle",
                    "Stacked"
                ],
                "default": "Logo on the left"
            },
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "imagen_carrusel_1": {
                "type": "image",
                "group": "Banners PC",
                "help": "Primera imagen del carrusel"
            },
            "banner_link_url_1": {
                "type": "text",
                "group": "Banners PC",
                "help": "Enlace del slider 1"
            },
            "imagen_carrusel_2": {
                "type": "image",
                "group": "Banners PC",
                "help": "Segunda imagen del carrusel"
            },
            "banner_link_url_2": {
                "type": "text",
                "group": "Banners PC",
                "help": "Enlace del slider 2"
            },
            "imagen_carrusel_3": {
                "type": "image",
                "group": "Banners PC",
                "help": "Tercera imagen del carrusel"
            },
            "banner_link_url_3": {
                "type": "text",
                "group": "Banners PC",
                "help": "Enlace del slider 3"
            },
            "imagen_banner_mobile_1": {
                "type": "image",
                "group": "Banners móviles",
                "help": "Primera imagen del carrusel que se mostrará en móviles"
            },
            "banner_link_mobiles_url_1": {
                "type": "text",
                "group": "Banners móviles",
                "help": "Enlace del slider 1 en móvil"
            },
            "imagen_banner_mobile_2": {
                "type": "image",
                "group": "Banners móviles",
                "help": "Segunda imagen del carrusel que se mostrará en móviles"
            },
            "banner_link_mobiles_url_2": {
                "type": "text",
                "group": "Banners móviles",
                "help": "Enlace del slider 2 en móvil"
            },
            "imagen_banner_mobile_3": {
                "type": "image",
                "group": "Banners móviles",
                "help": "Tercera imagen del carrusel que se mostrará en móviles"
            },
            "banner_link_mobiles_url_3": {
                "type": "text",
                "group": "Banners móviles",
                "help": "Enlace del slider 3 en móvil"
            },
            "mostrar_alerta": {
                "type": "boolean",
                "group": "Landing Page",
                "default": false,
                "help": "Mostrar alerta de bienvenida en el home"
            },
            "titulo_de_alerta": {
                "type": "text",
                "group": "Landing Page",
                "default": "¡Bienvenido!",
                "help": "Título de la alerta de bienvenida"
            },
            "texto_de_alerta": {
                "type": "text",
                "group": "Landing Page",
                "default": "Gracias por visitar nuestro sitio",
                "help": "Texto de la alerta de bienvenida"
            },
            "icono_alerta": {
                "type": "select",
                "options": [
                    "success",
                    "info",
                    "warning",
                    "error"
                ],
                "group": "Landing Page",
                "default": "info",
                "help": "Icono de la alerta"
            },
            "lugar_alerta": {
                "type": "select",
                "options": [
                    "top-end",
                    "top-start",
                    "top",
                    "bottom-end",
                    "bottom-start",
                    "bottom",
                    "center",
                    "center-start",
                    "center-end"
                ],
                "group": "Landing Page",
                "default": "top-end",
                "help": "Es el lugar donde se mostrará la alerta"
            },
            "tamano_de_la_alerta": {
                "type": "text",
                "group": "Landing Page",
                "default": "500px",
                "help": "Especifica el tamaño de la alerta en píxeles (ejemplo: 300px, 500px)"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.5.0",
        "autoprefixer": "10.4.21",
        "beeper": "2.1.0",
        "cssnano": "7.0.7",
        "gscan": "4.48.1",
        "gulp": "5.0.1",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.5.4",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.2",
        "sweetalert2": "^11.22.2",
        "swiper": "^8.4.7"
    }
}